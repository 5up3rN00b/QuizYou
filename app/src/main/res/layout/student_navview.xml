        <Button
            android:id="@+id/join_class_button"
            android:layout_width="139dp"
            android:layout_height="226dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="37dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="454dp"
            android:layout_marginBottom="66dp"
            android:background="@android:color/transparent"
            android:text="Join Class"
            android:textColor="@color/cardview_light_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="17dp"
            app:layout_constraintVertical_bias="0.418"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="28dp" />

        <Button
            android:id="@+id/my_reports_button"
            android:layout_width="144dp"
            android:layout_height="165dp"
            android:layout_below="@+id/take_test"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginBottom="51dp"
            android:background="@android:color/transparent"
            android:text="My Reports"
            android:textColor="@color/cardview_light_background"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.416"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="227dp" />

        <Button
            android:id="@+id/take_test"
            android:layout_width="310dp"
            android:layout_height="185dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="222dp"
            android:layout_marginEnd="58dp"
            android:layout_marginRight="58dp"
            android:background="@android:color/transparent"
            android:text="Take Test"
            android:textColor="@color/cardview_light_background"
            android:textSize="17dp" />

        <Spinner
            android:id="@+id/pendingTestsSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="179dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp" />

        <TextView
            android:id="@+id/user"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="43dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="99dp"
            android:fontFamily="sans-serif-light"
            android:text="Happy Penis"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="40dp" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="210dp"
            android:layout_height="98dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/welcome_text" />
      
        <ImageView
            android:id="@+id/reloadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:tint="#555555"
            app:srcCompat="@android:drawable/ic_popup_sync" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="339dp"
            android:layout_height="291dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="38dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="175dp"
            app:srcCompat="@drawable/panel_3" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="301dp"
            android:layout_height="304dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-38dp"
            android:layout_marginLeft="-38dp"
            android:layout_marginTop="431dp"
            android:layout_marginBottom="11dp"
            app:srcCompat="@drawable/panel_1" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_below="@+id/take_test"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="193dp"
            android:layout_marginLeft="193dp"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="11dp"
            app:srcCompat="@drawable/panel_1" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/der_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"></FrameLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_viewer1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:itemBackground="@color/cardview_light_background"
        app:menu="@menu/studentmenu">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>