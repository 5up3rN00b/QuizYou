<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/gradeTestAnswerKey"
        android:layout_width="188dp"
        android:layout_height="102dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="209dp"
        android:layout_marginTop="241dp"
        android:background="@drawable/big_box"
        android:padding="10dp"
        android:text="Answer Key" />

    <EditText
        android:id="@+id/gradeTestNotes"
        android:layout_width="390dp"
        android:layout_height="191dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/big_box"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:gravity="start"
        android:hint="Notes"
        android:inputType="textMultiLine|textPersonName"
        android:padding="10dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="337dp"
        android:layout_marginRight="337dp"
        android:background="@android:color/transparent"
        android:tint="#656565"
        app:srcCompat="@drawable/abc_vector_test" />

    <EditText
        android:id="@+id/gradeTestPoints"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="352dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/smol_box"
        android:ems="10"
        android:fontFamily="@font/bebasneue_regular"
        android:hint="Points"
        android:inputType="number"
        android:padding="10dp"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/gradeTestStudentAnswer"
        android:layout_width="188dp"
        android:layout_height="102dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="241dp"
        android:background="@drawable/big_box"
        android:padding="10dp"
        android:text="Student Answer" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="207dp"
        android:fontFamily="@font/bebas_regular"
        android:text="Student answer:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="207dp"
        android:layout_marginEnd="102dp"
        android:layout_marginRight="102dp"
        android:fontFamily="@font/bebas_regular"
        android:text="Answer key:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/gradeTestPrompt"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="131dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/smol_box"
        android:fontFamily="@font/open_sans"
        android:padding="10dp"
        android:text="Prompt"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="63dp"
        android:fontFamily="@font/bebas_regular"
        android:text="# of app exits:"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="1dp"
        app:srcCompat="@drawable/line_4" />

    <TextView
        android:id="@+id/gradeTestStudentName"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/bebas_regular"
        android:text="Student"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/gradeTestQuestionNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="207dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="1dp"
        android:fontFamily="@font/bebas_regular"
        android:text="Question Number"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/gradeTestExits"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/smol_box"
        android:fontFamily="@font/bebas_regular"
        android:padding="10dp"
        android:text="Exits"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/gradeTestSubmit"
        android:layout_width="51dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="182dp"
        android:layout_marginLeft="182dp"
        android:layout_marginBottom="11dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/icon_material_send" />

    <ImageButton
        android:id="@+id/gradeTestNext"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="46dp"
        android:layout_marginBottom="18dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/next" />

    <ImageButton
        android:id="@+id/gradeTestBack"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="19dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/back" />

</RelativeLayout>